<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <logging>
        <log type="coverage-html"
                target="./build/coverage/html"
                charset="UTF-8"
                highlight="false"
                lowUpperBound="35"
                highLowerBound="70"/>
          <log type="coverage-clover"
                target="./build/coverage/log/coverage.xml"/>
    </logging>
    <testsuites>
        <testsuite name="all">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
        <testsuite name="integration">
            <directory suffix=".php">./tests/integration/</directory>
        </testsuite>
        <testsuite name="unit">
            <directory suffix=".php">./tests/unit/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./</directory>
            <exclude>
                <directory suffix=".php">./vendor</directory>
                <directory suffix=".php">./tests</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <env name="TRELLO_API_ENVIRONMENT" value="qa"/>
        <env name="TRELLO_API_KEY" value="e178a807fac6528a24eac90471b32db8"/>
        <env name="TRELLO_API_SECRET" value="884e82e0287455717ab20bce50e56959801db35b103fb2b84d9600f8ed948904"/>
        <env name="TRELLO_API_TOKEN" value="93208745d001390a71715e0f87e0f9ebbdba24442391ac65069f45cd220577be"/>
        <env name="TRELLO_API_APPNAME" value="Test Suite"/>
        <env name="TRELLO_API_CALLBACK_URL" value="http://your-callback-uri/"/>
    </php>
</phpunit>
